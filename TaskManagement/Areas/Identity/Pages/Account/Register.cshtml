@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
    Layout = null; /* Opțional: Dacă vrei să ascunzi meniul site-ului pe pagina de login/register, scoate comentariul. Altfel, lasă Layout-ul default */
}

<!-- Includem Bootstrap manual doar dacă am scos Layout-ul standard (Layout = null).
     Dacă păstrezi Layout-ul site-ului, șterge liniile cu <link> de mai jos. -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    body, html {
        height: 100%;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-container {
        min-height: 100vh;
        width: 100%;
        overflow-x: hidden;
    }

    /* Partea stângă cu imaginea */
    .bg-image {
        /* Imagine de fundal - am pus una de tip "office/productivity" de pe Unsplash */
        background-image: url('https://images.unsplash.com/photo-1497215728101-856f4ea42174?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
        background-size: cover;
        background-position: center;
        position: relative;
    }

    /* Overlay albastru peste imagine pentru a face textul lizibil */
    .bg-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(13, 110, 253, 0.8), rgba(13, 110, 253, 0.4));
    }

    .quote-container {
        position: relative;
        z-index: 2;
        color: white;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 4rem;
    }

    /* Formularul */
    .form-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-color: #ffffff;
        padding: 2rem;
    }

    .form-content {
        width: 100%;
        max-width: 450px;
    }

    .btn-custom-primary {
        background-color: #0d6efd;
        border: none;
        padding: 12px;
        font-size: 1.1rem;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .btn-custom-primary:hover {
            background-color: #0b5ed7;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(13, 110, 253, 0.3);
        }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #0d6efd;
        font-weight: 600;
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
    }

    /* Linkuri */
    .link-primary {
        text-decoration: none;
        font-weight: 600;
    }
</style>

<div class="row g-0 register-container">

    <!-- COLOANA STÂNGA: Imagine & Branding (Ascunsă pe mobil) -->
    <div class="col-lg-6 d-none d-lg-block bg-image">
        <div class="bg-overlay"></div>
        <div class="quote-container">
            <h1 class="display-4 fw-bold mb-4">Task Master</h1>
            <figure>
                <blockquote class="blockquote">
                    <p class="fs-4">"Productivity is never an accident. It is always the result of a commitment to excellence, intelligent planning, and focused effort."</p>
                </blockquote>
                <figcaption class="blockquote-footer text-white mt-2">
                    Paul J. Meyer
                </figcaption>
            </figure>
            <div class="mt-5">
                <p><i class="fas fa-check-circle me-2"></i> Organize your team efficiently</p>
                <p><i class="fas fa-check-circle me-2"></i> Track progress in real-time</p>
                <p><i class="fas fa-check-circle me-2"></i> Meet every deadline</p>
            </div>
        </div>
    </div>

    <!-- COLOANA DREAPTA: Formular -->
    <div class="col-lg-6 form-wrapper">
        <div class="form-content">
            <div class="mb-5">
                <h2 class="fw-bold text-dark">Get Started</h2>
                <p class="text-muted">Create your account to start managing tasks.</p>
            </div>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <!-- Nume si Prenume -->
                <div class="row g-2 mb-2">
                    <div class="col-md-6">
                        <div class="form-floating mb-2">
                            <input asp-for="Input.FirstName" class="form-control" placeholder="John" />
                            <label asp-for="Input.FirstName">First Name</label>
                            <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-2">
                            <input asp-for="Input.LastName" class="form-control" placeholder="Doe" />
                            <label asp-for="Input.LastName">Last Name</label>
                            <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email Address</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <!-- Parola -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <!-- Confirmare Parola -->
                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-primary btn-custom-primary text-white fw-bold mb-4">
                    Create Account
                </button>

                <div class="text-center mb-4">
                    <span class="text-muted">Already have an account?</span>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="link-primary ms-1">Log In</a>
                </div>
            </form>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="position-relative text-center mb-4">
                    <hr class="text-muted">
                    <span class="position-absolute top-50 start-50 translate-middle px-3 bg-white text-muted small">OR CONTINUE WITH</span>
                </div>

                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-dark flex-grow-1" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                <!-- Poți adăuga iconițe aici dacă vrei, ex: <i class="fab fa-google"></i> -->
                                @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}