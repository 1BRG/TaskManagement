@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Schimbare Parolă";
    // Layout-ul null e necesar daca vrei sa incarci asta intr-o pagina standalone,
    // dar de obicei Identity foloseste un layout special.
    // Vom folosi Layout-ul principal al aplicatiei:
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-dark bg-opacity-25 border-0">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-shield-lock"></i> Securitate Cont</h4>
                </div>
                <div class="card-body p-4">
                    <h5 class="card-title text-center mb-4">Schimbă Parola</h5>

                    <partial name="_StatusMessage" for="StatusMessage" />

                    <form id="change-password-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- Parola Veche -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Parola veche" />
                            <label asp-for="Input.OldPassword" class="form-label"></label>
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>

                        <!-- Parola Noua -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Parola noua" />
                            <label asp-for="Input.NewPassword" class="form-label"></label>
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>

                        <!-- Confirmare Parola -->
                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirma parola" />
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark btn-lg">Actualizează Parola</button>
                            <a href="/" class="btn btn-outline-secondary">Renunță</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}