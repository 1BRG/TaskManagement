@page
@model LoginModel
@{
    ViewData["Title"] = "Welcome Back";
    Layout = null; /* Scoate comentariul dacă vrei full-screen fără meniu */
}

<!-- Includem Bootstrap și FontAwesome (Dacă ai Layout = null) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    body, html {
        height: 100%;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #fff;
    }

    .login-container {
        min-height: 100vh;
        width: 100%;
        overflow-x: hidden;
    }

    /* --- Partea Stângă (Imagine) --- */
    .bg-image {
        /* Imagine diferită de Register - ceva mai "focusat" / coffee / laptop */
        background-image: url('https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .bg-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        /* Un gradient ușor diferit, poate mai închis */
        background: linear-gradient(135deg, rgba(13, 110, 253, 0.7), rgba(0, 0, 0, 0.6));
    }

    .quote-container {
        position: relative;
        z-index: 2;
        color: white;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 4rem;
    }

    /* --- Partea Dreaptă (Formular) --- */
    .form-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 2rem;
    }

    .form-content {
        width: 100%;
        max-width: 420px; /* Puțin mai îngust decât register pentru un look compact */
    }

    .btn-custom-primary {
        background-color: #0d6efd;
        border: none;
        padding: 12px;
        font-size: 1.1rem;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .btn-custom-primary:hover {
            background-color: #0b5ed7;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(13, 110, 253, 0.3);
        }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #0d6efd;
        font-weight: 600;
    }

    .link-primary {
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s;
    }

        .link-primary:hover {
            color: #0a58ca;
            text-decoration: underline;
        }
</style>

<div class="row g-0 login-container">

    <!-- COLOANA STÂNGA: Imagine (Ascunsă pe mobil) -->
    <div class="col-lg-6 d-none d-lg-block bg-image">
        <div class="bg-overlay"></div>
        <div class="quote-container">
            <h1 class="display-4 fw-bold mb-4">Welcome Back!</h1>
            <figure>
                <blockquote class="blockquote">
                    <p class="fs-4">"Organizing is what you do before you do something, so that when you do it, it is not all mixed up."</p>
                </blockquote>
                <figcaption class="blockquote-footer text-white mt-2">
                    A.A. Milne
                </figcaption>
            </figure>
        </div>
    </div>

    <!-- COLOANA DREAPTA: Formular Login -->
    <div class="col-lg-6 form-wrapper">
        <div class="form-content">

            <div class="text-center mb-5">
                <div class="mb-3">
                    <!-- Aici poți pune LOGO-ul tău dacă ai unul -->
                    <i class="fas fa-layer-group fa-3x text-primary"></i>
                </div>
                <h2 class="fw-bold text-dark">Sign In</h2>
                <p class="text-muted">Enter your details to access your workspace.</p>
            </div>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email Address</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <!-- Remember Me & Forgot Password Row -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label text-muted small" asp-for="Input.RememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="link-primary small">Forgot Password?</a>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-primary btn-custom-primary text-white fw-bold mb-4">
                    Sign In
                </button>

                <div class="text-center mb-4">
                    <span class="text-muted">New to our platform?</span>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-primary ms-1">Create an account</a>
                </div>
            </form>

            <!-- Social Login / External Services -->
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="position-relative text-center mb-4">
                    <hr class="text-muted">
                    <span class="position-absolute top-50 start-50 translate-middle px-3 bg-white text-muted small">OR SIGN IN WITH</span>
                </div>

                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-dark flex-grow-1" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}