@model TaskManagement.ViewModels.UserEditViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<TaskManagement.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Setări Profil";
}

<div class="container mt-5">
    <div class="row">
        <!-- COLOANA STANGA: Formular Editare Date -->
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 text-primary"><i class="bi bi-person-lines-fill"></i> Informații Personale</h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditProfile" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-bold">Prenume</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-bold">Nume</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-muted">Email (nu se poate modifica)</label>
                            <input asp-for="Email" class="form-control bg-light" readonly />
                        </div>

                        <div class="mb-4">
                            <label asp-for="PhoneNumber" class="form-label fw-bold">Telefon</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="07xx..." />
                        </div>

                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-check-circle"></i> Salvează Modificările
                        </button>
                        <a asp-action="Show" asp-route-id="@Model.Id" class="btn btn-link text-secondary">Anulează</a>
                    </form>
                </div>
            </div>
        </div>

        <!-- COLOANA DREAPTA: Securitate (Identity) -->
        <div class="col-md-4">
            <!-- Card Securitate -->
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-warning bg-opacity-10 border-warning">
                    <h6 class="mb-0 text-dark fw-bold"><i class="bi bi-shield-lock"></i> Securitate</h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted">Pentru siguranța ta, modificarea parolei se face într-o secțiune separată.</p>

                    <!-- Link catre Identity Change Password -->
                    <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="btn btn-outline-dark w-100 mb-2 text-start">
                        <i class="bi bi-key me-2"></i> Schimbă Parola
                    </a>
                </div>
            </div>

            <!-- Card Zona Periculoasa -->
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h6 class="mb-0 fw-bold"><i class="bi bi-exclamation-triangle"></i> Zonă Periculoasă</h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted">Odată șters, contul nu mai poate fi recuperat.</p>

                    <!-- Link catre Identity Delete -->
                    <a asp-area="Identity" asp-page="/Account/Manage/DeletePersonalData" class="btn btn-danger w-100 text-start">
                        <i class="bi bi-trash me-2"></i> Șterge Contul
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}