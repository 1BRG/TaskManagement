@model TaskManagement.Models.UserProfileViewModel

<div class="container mt-5">
    <div class="row">
        <!-- Coloana Stanga: Informatii User -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <!-- Avatar Mare -->
                        <div class="bg-dark text-white rounded-circle d-inline-flex justify-content-center align-items-center display-4 shadow" style="width: 120px; height: 120px;">
                            @Model.FirstName[0]@Model.LastName[0]
                        </div>
                    </div>
                    <h4>@Model.FullName</h4>
                    <p class="text-muted">@Model.Email</p>
                    
                    @if (Model.Role == "Admin")
                    {
                        <span class="badge bg-danger mb-3">Administrator</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary mb-3">Membru Echipa</span>
                    }

                    <div class="d-flex justify-content-around mt-3 border-top pt-3">
                        <div>
                            <h5>@Model.ProjectsCount</h5>
                            <small class="text-muted">Proiecte</small>
                        </div>
                        <div>
                            <h5>@Model.TasksCount</h5>
                            <small class="text-muted">Task-uri</small>
                        </div>
                    </div>

                    @if (Model.IsOwnerOrAdmin)
                    {
                        <div class="mt-4">
                            <button class="btn btn-outline-dark w-100">Editează Profil</button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Coloana Dreapta: Activitate (Tabs) -->
        <div class="col-md-8">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white">
            <ul class="nav nav-tabs card-header-tabs text-color" id="profileTabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" id="projects-tab" data-bs-toggle="tab" data-bs-target="#projects" type="button"><p class = "text-black">Proiecte Active</p></button>
                </li>
                <li class="nav-item">
                            <button class="nav-link text-black" id="tasks-tab" data-bs-toggle="tab" data-bs-target="#tasks" type="button"><p class="text-black">Task-uri Asignate</p></button>
                </li>
            </ul>
        </div>

        <div class="card-body">
            <div class="tab-content" id="profileTabsContent">

    <!-- PROIECTE -->
    <div class="tab-pane fade show active" id="projects" role="tabpanel">
        @if (Model.Projects.Any())
        {
            <div class="scroll-area">
                @foreach (var proj in Model.Projects.OrderBy(p => p.Title))
                {
                    <div class="project-item mb-2">
                        <div class="project-title">@proj.Title</div>
                        <div class="project-description">@proj.Description</div>
                        <div class="project-meta">
                            <small class="text-muted">@((proj.Members?.Count() ?? 0)) membri</small>
                            <a href="#" class="btn btn-sm btn-outline-primary py-0 px-2">Board</a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">Utilizatorul nu are proiecte active.</p>
        }
    </div>


    <!-- TASK-URI -->
    <div class="tab-pane fade" id="tasks" role="tabpanel">
    @if (Model.Tasks != null && Model.Tasks.Any())
    {
        
            var tasksSorted = Model.Tasks.OrderBy(t => t.IsCompleted).ThenBy(t => t.Order).ToList();
            var incomplete = tasksSorted.Where(t => !t.IsCompleted).ToList();
            var complete = tasksSorted.Where(t => t.IsCompleted).ToList();
        

        <!-- token antiforgery (va fi citit în JS) -->
        <div id="antiForgeryToken">
            @Html.AntiForgeryToken()
        </div>

        <div class="row">
            <!-- IN LUCRU -->
            <div class="col-md-6">
                <h6 class="mb-3">În lucru (@incomplete.Count())</h6>
                <div id="incompleteList" class="list-group scroll-area">
                    @foreach (var task in incomplete)
                    {
                        var id = task.Id;
                        var collapseId = $"taskCollapse_{id}";
                        <div class="list-group-item mb-2 p-0 task-row" data-task-id="@id" data-completed="false">
                            <div class="d-flex align-items-center justify-content-between p-3">
                                <div>
                                    <div class="fw-semibold">@task.Title</div>
                                    <div class="small text-muted">@task.Project?.Title</div>
                                </div>

                                <div class="d-flex align-items-center">
                                    <button class="btn btn-sm btn-outline-secondary me-2" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false">Detalii</button>

                                    <button class="btn btn-sm btn-warning js-toggle" data-id="@id" data-completed="false">Marchează finalizat</button>
                                </div>
                            </div>

                            <div class="collapse" id="@collapseId">
                                <div class="card card-body p-3">
                                    <div class="mb-2"><small class="text-muted">Perioadă</small><div class="small">@task.StartDate.ToString("dd MMM yyyy") - @task.EndDate.ToString("dd MMM yyyy")</div></div>
                                    <div class="mb-2"><small class="text-muted">Prioritate</small><div class="small">@task.Priority</div></div>
                                    <div class="mb-2"><small class="text-muted">Status</small><div class="small">@task.Status</div></div>
                                    <div class="mb-2"><small class="text-muted">Descriere</small><div class="small">@Html.Raw(Html.Encode(task.Description).Replace("\n","<br/>"))</div></div>

                                    @if (!string.IsNullOrEmpty(task.MediaUrl))
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted">Media</small>
                                            <div class="mt-1">
                                                @if (task.MediaType == MediaTypeEnum.Image)
                                                {
                                                    <img src="@task.MediaUrl" alt="media" style="max-width:100%; border-radius:.25rem;" />
                                                }
                                                else if (task.MediaType == MediaTypeEnum.Video)
                                                {
                                                    <video controls style="max-width:100%; border-radius:.25rem;">
                                                        <source src="@task.MediaUrl" />
                                                    </video>
                                                }
                                                else
                                                {
                                                    <a href="@task.MediaUrl" target="_blank" rel="noopener">@task.MediaUrl</a>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- FINALIZATE -->
            <div class="col-md-6">
                <h6 class="mb-3">Finalizate (@complete.Count())</h6>
                <div id="completedList" class="list-group scroll-area">
                    @foreach (var task in complete)
                    {
                        var id = task.Id;
                        var collapseId = $"taskCollapse_{id}";
                        <div class="list-group-item mb-2 p-0 task-row bg-light" data-task-id="@id" data-completed="true">
                            <div class="d-flex align-items-center justify-content-between p-3">
                                <div>
                                    <div class="fw-semibold text-decoration-line-through">@task.Title</div>
                                    <div class="small text-muted">@task.Project?.Title</div>
                                </div>

                                <div class="d-flex align-items-center">
                                    <button class="btn btn-sm btn-outline-secondary me-2" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false">Detalii</button>

                                    <button class="btn btn-sm btn-outline-success js-toggle" data-id="@id" data-completed="true">Marchează în lucru</button>
                                </div>
                            </div>

                            <div class="collapse" id="@collapseId">
                                <div class="card card-body p-3">
                                    <div class="mb-2"><small class="text-muted">Perioadă</small><div class="small">@task.StartDate.ToString("dd MMM yyyy") - @task.EndDate.ToString("dd MMM yyyy")</div></div>
                                    <div class="mb-2"><small class="text-muted">Prioritate</small><div class="small">@task.Priority</div></div>
                                    <div class="mb-2"><small class="text-muted">Status</small><div class="small">@task.Status</div></div>
                                    <div class="mb-2"><small class="text-muted">Descriere</small><div class="small">@Html.Raw(Html.Encode(task.Description).Replace("\n","<br/>"))</div></div>

                                    @if (!string.IsNullOrEmpty(task.MediaUrl))
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted">Media</small>
                                            <div class="mt-1">
                                                @if (task.MediaType == MediaTypeEnum.Image)
                                                {
                                                    <img src="@task.MediaUrl" alt="media" style="max-width:100%; border-radius:.25rem;" />
                                                }
                                                else if (task.MediaType == MediaTypeEnum.Video)
                                                {
                                                    <video controls style="max-width:100%; border-radius:.25rem;">
                                                        <source src="@task.MediaUrl" />
                                                    </video>
                                                }
                                                else
                                                {
                                                    <a href="@task.MediaUrl" target="_blank" rel="noopener">@task.MediaUrl</a>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <script>
            (function() {
                // preia tokenul antiforgery
                const tokenInput = document.querySelector('#antiForgeryToken input[name="__RequestVerificationToken"]');
                const token = tokenInput ? tokenInput.value : '';

                const url = '@Url.Action("ToggleTaskCompletion", "Users")';

                async function toggleTask(taskId, button) {
                    button.disabled = true;
                    try {
                        const res = await fetch(url, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': token
                            },
                            body: JSON.stringify({ id: parseInt(taskId) })
                        });

                        if (!res.ok) {
                            const txt = await res.text();
                            throw new Error(txt || 'Server error');
                        }

                        const data = await res.json();
                        if (!data.success) throw new Error(data?.error || 'Eroare');

                        // muta elementul în listă
                        const el = document.querySelector(`.task-row[data-task-id='${taskId}']`);
                        if (!el) return;

                        if (data.isCompleted) {
                            el.dataset.completed = "true";
                            el.classList.add('bg-light');
                            el.querySelectorAll('.js-toggle').forEach(b => { b.textContent = 'Marchează în lucru'; b.dataset.completed = "true"; b.classList.remove('btn-warning'); b.classList.add('btn-outline-success'); });
                            document.getElementById('completedList').appendChild(el);
                        } else {
                            el.dataset.completed = "false";
                            el.classList.remove('bg-light');
                            el.querySelectorAll('.js-toggle').forEach(b => { b.textContent = 'Marchează finalizat'; b.dataset.completed = "false"; b.classList.remove('btn-outline-success'); b.classList.add('btn-warning'); });
                            document.getElementById('incompleteList').appendChild(el);
                        }
                    } catch (err) {
                        console.error(err);
                        alert('A apărut o eroare la actualizarea task-ului.');
                    } finally {
                        button.disabled = false;
                    }
                }

                document.addEventListener('click', function (e) {
                    const btn = e.target.closest('.js-toggle');
                    if (!btn) return;
                    e.preventDefault();
                    const id = btn.dataset.id;
                    toggleTask(id, btn);
                });

                // stiluri inițiale butoane
                document.querySelectorAll('.js-toggle').forEach(b => {
                    if (b.dataset.completed === "true") {
                        b.classList.add('btn-outline-success');
                    } else {
                        b.classList.add('btn-warning');
                    }
                });
            })();
        </script>
    }
    else
    {
        <p class="text-muted">Nu există task-uri asignate.</p>
    }
</div>

</div>
        </div>
    </div>
</div>