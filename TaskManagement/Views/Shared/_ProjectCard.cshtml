@model TaskManagement.Models.Project

<!-- Card pentru un singur proiect -->
<div class="card shadow-sm mb-4 h-100">
    <div class="card-body d-flex flex-column">
        <!-- titlu + buton edit -->
        <div class="d-flex justify-content-between align-items-start mb-2">
            <h5 class="card-title mb-0">@Model?.Title</h5>
            <a asp-controller="Projects"
               asp-action="Edit"
               asp-route-id="@Model?.Id"
               class="btn btn-sm btn-outline-secondary"
               title="Editeaza proiect"
               aria-label="Editeaza proiect @Model?.Title">
                ⚙️
            </a>
        </div>

        <!-- organizator -->
        <h6 class="card-subtitle mb-2 text-muted">
            Organizator: @(Model?.Organizer != null ? $"{Model.Organizer.FirstName} {Model.Organizer.LastName}" : "—")
        </h6>

        <!-- descriere (preview sigur) -->
        <p class="card-text flex-grow-1">
            @{
                var desc = string.IsNullOrWhiteSpace(Model?.Description) ? "Fara descriere" : Model.Description;
                var maxChars = 150; // ajusteaza cat vrei sa afisezi
                var preview = desc.Length > maxChars ? desc.Substring(0, Math.Min(maxChars, desc.Length)) + "…" : desc;
            }
            @preview
        </p>
    </div>

    <div class="card-footer bg-transparent border-top-0">
        <!-- buton care duce la pagina proiectului -->
        <!--/Board/Index/item.Id-->
		<!--
        <a asp-controller="Projects"
           asp-action="Show"
           asp-route-id="@Model?.Id"
           class="btn btn-primary w-100"
           role="button"
           aria-label="Deschide proiect @Model?.Title">
            Deschide Proiect
        </a>
		-->
		
        <a asp-controller="Board"
           asp-action="Index"
           asp-route-id="@Model?.Id"
           class="btn btn-primary w-100"
           role="button"
           aria-label="Deschide proiect @Model?.Title">
            Deschide Proiect
		</a>  
    </div>
</div>
