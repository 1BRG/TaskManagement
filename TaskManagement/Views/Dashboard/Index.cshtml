@model List<TaskManagement.Models.Project>

<div class="container py-4">
    <partial name="_Alert" />

    <!-- Header cu Titlu -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary"><i class="bi bi-speedometer2"></i> Dashboard</h2>
            <p class="text-muted mb-0">Gestionează proiectele și echipa ta.</p>
        </div>
    </div>

    <!-- Verificare daca exista proiecte -->
    @if (!Model.Any() && ViewBag.CurrentPage == 1)
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-folder2-open text-muted" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-muted">Nu ai niciun proiect momentan.</h4>
            <p class="text-muted">Începe prin a crea primul tău proiect!</p>
            <a asp-controller="Projects" asp-action="New" class="btn btn-primary mt-2">Creează Proiect</a>
        </div>
    }
    else
    {
        <div class="row g-4 mb-4">
            @foreach (var project in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <partial name="_ProjectCard" model="project" />
                </div>
            }
        </div>

        <!-- ZONA DE PAGINARE -->
        <!-- Afisam paginarea doar daca avem mai mult de o pagina -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">

                    <!-- Buton Previous -->
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage - 1)"
                           aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    <!-- Numerele paginilor -->
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }

                    <!-- Buton Next -->
                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage + 1)"
                           aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>