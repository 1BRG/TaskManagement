@model List<TaskManagement.Models.Project>

<div class="container py-4">
    <!-- Header cu Titlu si Buton de Adaugare -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary"><i class="bi bi-speedometer2"></i> Dashboard</h2>
            <p class="text-muted mb-0">Gestionează proiectele și echipa ta.</p>
        </div>
        <a asp-controller="Projects" asp-action="New" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg"></i> Proiect Nou
        </a>
    </div>

    <!-- Verificare daca exista proiecte -->
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-folder2-open text-muted" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-muted">Nu ai niciun proiect momentan.</h4>
            <p class="text-muted">Începe prin a crea primul tău proiect!</p>
            <a asp-controller="Projects" asp-action="New" class="btn btn-primary mt-2">Creează Proiect</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <!-- g-4 adauga spatiu intre carduri -->
            @foreach (var project in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <partial name="_ProjectCard" model="project" />
                </div>
            }
        </div>
    }
</div>