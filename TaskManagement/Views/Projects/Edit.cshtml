@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> _userManager
@model TaskManagement.Models.Project

@{
    ViewData["Title"] = "Editare Proiect";
}

<!-- Nu pune <body> aici, este deja in _Layout -->
<div class="app-container">
    @await Html.PartialAsync("_Sidebar")

    <main class="content">
        <div class="row">
            <!-- Corectat din col-md-600 in col-md-8 -->
            <div class="col-md-8">

                <!-- FORMULARUL 1: EDITARE PROIECT -->
                <form asp-action="Edit" method="post" class="mb-5 border p-3 rounded">
                    <h4 class="mb-3">Detalii Proiect</h4>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="Title" class="control-label">Titlu Proiect</label>
                        <!-- Am scos value="@Model.Title", asp-for se ocupa de asta -->
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label">Descriere</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-warning">Salvează Proiectul</button>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Anulează</a>
                </form> <!-- AICI SE INCHIDE PRIMUL FORM -->
                <!-- SECTIUNEA MEMBRILOR (In afara form-ului de editare) -->
                <div class="card mt-4">
                    <div class="card-header">
                        Membrii Echipei
                    </div>
                    <div class="list-group list-group-flush">
                        @if (ViewBag.Members != null)
                        {
                            @foreach (var userProject in ViewBag.Members)
                            {
                                // Cautam userul
                                var member = await _userManager.FindByIdAsync(userProject.UserId.ToString());

                                // VERIFICARE CRITICĂ: Afisam doar daca userul exista
                                if (member != null)
                                {
                                    <a asp-controller="Users" asp-action="Profile" asp-route-id="@userProject.UserId"
                                       class="list-group-item list-group-item-action d-flex align-items-center">

                                        <div class="me-3 rounded-circle bg-secondary text-white d-inline-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                            <!-- Folosim operatorul ? pentru siguranta -->
                                            @(member.FirstName?.Substring(0, 1).ToUpper() ?? "U")
                                        </div>

                                        <div>
                                            <div class="fw-semibold">
                                                @member.FirstName @member.LastName
                                            </div>
                                            <small class="text-muted">@member.Email</small>
                                        </div>
                                    </a>
                                }
                            }
                        }
                    </div>

                    <div class="card-body">
                        <button class="btn btn-sm btn-success" onclick="toggleAddMember()">
                            + Adaugă Membru
                        </button>

                        <!-- FORMULARUL 2: ADAUGARE MEMBRU (Separat de primul) -->
                        <form asp-controller="Projects"
                              asp-action="AddMember"
                              method="post"
                              class="mt-3"
                              id="addMemberForm"
                              style="display:none">

                            <input type="hidden" name="projectId" value="@Model.Id" />

                            <div class="input-group">
                                <input type="email"
                                       name="email"
                                       class="form-control"
                                       placeholder="Email utilizator"
                                       required />

                                <button type="submit" class="btn btn-primary">
                                    Adaugă
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </main>
</div>

<script>
    function toggleAddMember() {
        const form = document.getElementById("addMemberForm");
        form.style.display = form.style.display === "none" ? "block" : "none";
    }
</script>