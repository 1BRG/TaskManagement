@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> _userManager
@model TaskManagement.Models.Project


@{
    ViewData["Title"] = "Editare Proiect";
    ViewData["HideNav"] = true;   // <- adauga asta pentru a ascunde navbar-ul
    // Use the default _Layout (do not set Layout = null) so CSS and shared assets remain loaded.
}

<div class="app-container">
    @await Html.PartialAsync("_Sidebar")

    <main class="content">
        <div class="row">
            
            <div class="col-md-8">

                <!-- FORMULARUL 1: EDITARE PROIECT -->
                <form asp-action="Edit" method="post" class="mb-5 border p-3 rounded">
                    <h4 class="mb-3">Detalii Proiect</h4>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="Title" class="control-label">Titlu Proiect</label>
                        
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label">Descriere</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-warning">Salveaza Proiectul</button>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Anuleaza</a>
                </form> 
                <!-- SECTIUNEA MEMBRILOR (In afara form-ului de editare) -->
                <div class="card mt-4">
                    <div class="card-header">
                        Membrii Echipei
                    </div>
                    <div class="list-group list-group-flush">
                        @if (ViewBag.Members != null)
                        {
                            @foreach (var userProject in ViewBag.Members)
                            {
                                // Cautam userul
                                var member = await _userManager.FindByIdAsync(userProject.UserId.ToString());

                                // VERIFICARE CRITICa: Afisam doar daca userul exista
                                if (member != null)
                                {
                                    <div class="list-group-item d-flex align-items-center position-relative py-2">
                                    <a asp-controller="Users" asp-action="Profile" asp-route-id="@userProject.UserId"
                                           class="d-flex align-items-center text-decoration-none text-reset flex-grow-1 me-4">

                                        <div class="me-3 rounded-circle bg-secondary text-white d-inline-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                            <!-- Folosim operatorul ? pentru siguranta -->
                                            @(member.FirstName?.Substring(0, 1).ToUpper() ?? "U")
                                        </div>

                                        <div>
                                            <div class="fw-semibold">
                                                @member.FirstName @member.LastName
                                            </div>
                                            <small class="text-muted">@member.Email</small>
                                        </div>
                                    </a>

                                        @if (member.Id != Model.OrganizerId)
                                        {
                                           <div class="delete-btn-wrapper">
                                            <!-- Buton care deschide modal (recomandat) -->
                                                <button type="button"
                                                        class="btn btn-sm btn-trash-circle"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#confirmRemoveModal-@member.Id"
                                                        aria-label="sterge @member.FirstName @member.LastName"
                                                        title="sterge membru">
                                                    X
                                                </button>
                                            </div>

                                             <!-- Modal per-member -->
                                            <div class="modal fade" id="confirmRemoveModal-@member.Id" tabindex="-1" aria-hidden="true">
                                              <div class="modal-dialog modal-sm modal-dialog-centered">
                                                <div class="modal-content">
                                                  <div class="modal-header">
                                                    <h5 class="modal-title">Confirmare stergere</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Închide"></button>
                                                  </div>
                                                  <div class="modal-body">
                                                    Esti sigur ca doresti sa stergi membrul <strong>@member.FirstName @member.LastName</strong> din proiect?
                                                  </div>
                                                  <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Anuleaza</button>

                                                    <form asp-controller="Projects" asp-action="RemoveMember" method="post" class="d-inline">
                                                        <input type="hidden" name="projectId" value="@Model.Id" />
                                                        <input type="hidden" name="removedUserId" value="@member.Id" />
                                                        <button type="submit" class="btn btn-danger btn-sm">sterge</button>
                                                    </form>
                                                  </div>
                                                </div>
                                              </div>
                                            </div>
                                            
                                        }
                                    </div>
                                }
                            }
                        }
                    </div>

                    <div class="card-body">
                        <button class="btn btn-sm btn-success" onclick="toggleAddMember()">
                            + Adauga Membru
                        </button>

                        <!-- FORMULARUL 2: ADAUGARE MEMBRU (Separat de primul) -->
                        <form asp-controller="Projects"
                              asp-action="AddMember"
                              method="post"
                              class="mt-3"
                              id="addMemberForm"
                              style="display:none">

                            <input type="hidden" name="projectId" value="@Model.Id" />

                            <div class="input-group">
                                <input type="email"
                                       name="email"
                                       class="form-control"
                                       placeholder="Email utilizator"
                                       required />

                                <button type="submit" class="btn btn-primary">
                                    Adauga
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </main>
</div>

<script>
    function toggleAddMember() {
        const form = document.getElementById("addMemberForm");
        form.style.display = form.style.display === "none" ? "block" : "none";
    }
</script>

 <style>
    /* Wrapper pozitionare pentru butonul de delete */
    .list-group-item {
        position: relative;
    }

    /* Buton circular, vizibil pe orice fundal */
    .btn-trash-circle {
        width: 36px;
        height: 36px;
        padding: 0;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background-color: #dc3545; /* bootstrap danger */
        color: #fff;
        border: none;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        transition: transform .12s ease, box-shadow .12s ease;
    }

    /* pozitionare în dreapta (asigura ca nu suprapune link-ul) */
    .delete-btn-wrapper {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
    }

    /* hover/focus effects */
    .btn-trash-circle:hover,
    .btn-trash-circle:focus {
        transform: translateY(-2px) scale(1.03);
        box-shadow: 0 6px 14px rgba(0,0,0,0.12);
        outline: none;
    }

    /* evitam modificari de padding/height la hover pe lista principala */
    .list-group-item:hover { /* pastram layoutul stabil */
        background-color: #f8f9fa; /* optional, nu schimbam padding/height */
    }
 </style>